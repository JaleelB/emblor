{
  "name": "emblor",
  "version": "1.4.7",
  "description": "A full featured, unstyled tag input component for React",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "pnpm turbo build --filter emblor",
    "typecheck": "tsc --noEmit",
    "build": "run-p build:*",
    "build:tsup": "tsup --dts --minify",
    "clean": "rimraf dist",
    "dev": "tsup --watch --dts",
    "format": "prettier --write .",
    "prettier-check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "release": "pnpm run build && changeset publish",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "react",
    "tag input",
    "tag input component",
    "radix ui tag input",
    "react tag input",
    "emblor",
    "emblor tag input",
    "emblor tag input component"
  ],
  "author": "Jaleel Bennett <jaleelcodes@gmail.com>",
  "license": "MIT",
  "homepage": "https://emblor.jaleelbennett.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/JaleelB/emblor",
    "directory": "packages/emblor"
  },
  "bugs": {
    "url": "https://github.com/JaleelB/emblor/issues"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.0.26",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^23.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "packageManager": "pnpm@9.0.2",
  "dependencies": {
    "@radix-ui/react-collection": "^1.1.1",
    "@radix-ui/react-compose-refs": "^1.1.1",
    "@radix-ui/react-context": "^1.1.1",
    "@radix-ui/react-dialog": "1.0.4",
    "@radix-ui/react-direction": "^1.1.0",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-primitive": "^2.0.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-use-callback-ref": "^1.1.0",
    "@radix-ui/react-use-controllable-state": "^1.1.0",
    "class-variance-authority": "latest",
    "clsx": "latest",
    "cmdk": "latest",
    "react-easy-sort": "latest",
    "tailwind-merge": "latest"
  }
}
